@model IEnumerable<JokesWebApp.Models.ModelExt>

    @{
        //ViewData["Title"] = "Index";
    }

    <h2>@ViewData["Title"]</h2>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.JokeQuestion)
                </th>
                <!--
                <th>
                    @Html.DisplayNameFor(model => model.JokeAnswer)
                </th>
                -->
                <th>User</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="py-1">
                    <td>
                        @Html.DisplayFor(modelItem => item.JokeQuestion)
                    </td>
                    <!--
                    <td>
                        @Html.DisplayFor(modelItem => item.JokeAnswer)
                    </td>
                    -->
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.JokeId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.JokeId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.JokeId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
